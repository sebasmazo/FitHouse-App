<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:padding="16dp"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/image"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:src="@color/black" />
    <TextView
        android:id="@+id/txtName"
        android:layout_toRightOf="@+id/image"
        android:layout_marginLeft="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/TextAppearance.AppCompat.Title"
        android:text="Name"
        />
    <TextView
        android:id="@+id/txtBrd"
        android:layout_toRightOf="@+id/image"
        android:layout_marginLeft="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/txtName"
        style="@style/TextAppearance.AppCompat.SearchResult.Subtitle"
        android:text="Marca: "
        />

    <TextView
        android:id="@+id/txtBrand"
        style="@style/TextAppearance.AppCompat.SearchResult.Subtitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/txtName"
        android:layout_marginLeft="20dp"
        android:layout_toRightOf="@+id/txtBrd"
        android:maxLines="1"
        android:text="Name" />
    <TextView
        android:id="@+id/txtAmm"
        android:layout_toRightOf="@+id/image"
        android:layout_marginLeft="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/txtBrand"
        style="@style/TextAppearance.AppCompat.SearchResult.Subtitle"
        android:text="Cantidad:"
        />
    <TextView
        android:id="@+id/txtAmmount"
        android:layout_toRightOf="@+id/txtAmm"
        android:layout_marginLeft="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/txtBrand"
        style="@style/TextAppearance.AppCompat.SearchResult.Subtitle"
        android:text="Name"
        />
    <TextView
        android:id="@+id/txtServ"
        android:layout_toRightOf="@+id/image"
        android:layout_marginLeft="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/txtAmmount"
        style="@style/TextAppearance.AppCompat.SearchResult.Subtitle"
        android:text="Servicios:"
        />
    <TextView
        android:id="@+id/txtServings"
        android:layout_toRightOf="@+id/txtServ"
        android:layout_marginLeft="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/txtAmmount"
        style="@style/TextAppearance.AppCompat.SearchResult.Subtitle"
        android:text="Name"
        />

    <TextView
        android:id="@+id/txtDesc"
        style="@style/TextAppearance.AppCompat.Title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/image"
        android:text="DescripciÃ³n" />

    <TextView
        android:id="@+id/txtPrice"
        style="@style/TextAppearance.AppCompat.SearchResult.Subtitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/image"
        android:layout_marginLeft="60dp"
        android:layout_marginTop="3dp"
        android:layout_toRightOf="@+id/txtDesc"
        android:text="Name" />
    <TextView
        android:id="@+id/txtDescription"
        style="@style/TextAppearance.AppCompat.SearchResult.Subtitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/txtDesc"
        android:maxLines="3"
        android:maxLength="100"
        android:text="Name" />
</RelativeLayout>